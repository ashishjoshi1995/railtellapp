<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ashish.railtellapp.gallery2">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView14"
        android:src="@drawable/image1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView15"
        android:src="@drawable/images3"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Gallery"
        android:id="@+id/textView56"
        android:textSize="40dp"
        android:textColor="#828206"
        android:layout_above="@+id/textView59"
        android:layout_toRightOf="@+id/imageView14"
        android:layout_toEndOf="@+id/imageView14" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="23dp"
        android:text="Field Visit"
        android:id="@+id/textView57"
        android:textColor="#828206"
        android:textSize="20dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView59"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="09-08-2015"
        android:id="@+id/textView59"
        android:textSize="8dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/imageView15"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tetracam"
        android:id="@+id/textView60"
        android:layout_alignParentEnd="true"
        android:textSize="8dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView56"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Next Page>>"
        android:id="@+id/g2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="8dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="09-08-2015"
        android:id="@+id/textView62"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/pic2a"
        android:scaleType="centerCrop"
        android:layout_above="@+id/g2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp" />
</RelativeLayout>
