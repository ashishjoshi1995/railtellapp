<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ashish.railtellapp.MainActivity">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
    android:text="    Satellite Based Agriculture Information System"
    android:id="@+id/textView"
    android:textColor="#828206"
    android:textSize="@dimen/abc_action_bar_content_inset_material"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Developed By: Prof Dharmendra Singh &amp; Team"
    android:id="@+id/textView2"
    android:textSize="@dimen/abc_action_bar_overflow_padding_end_material"
    android:textColor="#828206"
    android:layout_below="@+id/textView"
    android:layout_centerHorizontal="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Sponsored By: RailTel - IIT Roorkee Centre of Excellence in Telecom (RICET)"
    android:id="@+id/textView3"
    android:layout_below="@+id/textView2"
    android:textColor="#828206"
    android:textSize="@dimen/abc_action_bar_overflow_padding_end_material"
    android:layout_alignRight="@+id/textView"
    android:layout_alignEnd="@+id/textView" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="ACK: Thanks to Reliance Jio for providing Cloud"
    android:id="@+id/textView4"
    android:textColor="#828206"
    android:textSize="@dimen/abc_action_bar_overflow_padding_end_material"
    android:layout_below="@+id/textView3"
    android:layout_centerHorizontal="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:text="Home"
    android:id="@+id/b1"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:onClick="init()" />

<Button
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="Research Team"
    android:id="@+id/b5"
    android:layout_below="@+id/b1"
    android:layout_alignParentEnd="true" />

<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:id="@+id/imageView"
    android:src="@drawable/image1"
    android:layout_below="@+id/textView4"
    android:layout_alignParentStart="true"
    android:layout_toStartOf="@+id/imageView2" />

<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:id="@+id/imageView2"
    android:src="@drawable/images3"
    android:layout_alignTop="@+id/imageView"
    android:layout_alignEnd="@+id/email"
    android:layout_alignStart="@+id/btnLinkToRegisterScreen" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:id="@+id/email"
    android:hint="username"
    android:visibility="visible"
    android:layout_above="@+id/password"
    android:layout_alignParentEnd="true"
    android:layout_alignStart="@+id/password" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Username"
    android:id="@+id/textView6"
    android:textColor="#828206"
    android:theme="@style/Animation.AppCompat.Dialog"
    android:textSize="20dp"
    android:paddingStart="1dp"
    android:paddingEnd="1dp"
    android:layout_alignTop="@+id/email"
    android:layout_above="@+id/textView5"
    android:layout_alignParentStart="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/password"
    android:hint="password"
    android:layout_above="@+id/btnLogin"
    android:layout_alignEnd="@+id/textView3"
    android:layout_alignParentEnd="true" />

<Button
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:text="Sign in"
    android:id="@+id/btnLogin"
    android:layout_above="@+id/b7"
    android:layout_alignEnd="@+id/password" />

<Button
    android:layout_width="170dp"
    android:layout_height="40dp"
    android:text="Forgot Password"
    android:id="@+id/b7"
    android:layout_alignTop="@+id/btnLinkToRegisterScreen"
    android:layout_alignParentStart="true" />

<Button
    android:layout_width="170dp"
    android:layout_height="40dp"
    android:text="New User ?"
    android:id="@+id/btnLinkToRegisterScreen"
    android:singleLine="true"
    android:layout_alignParentBottom="true"
    android:layout_alignEnd="@+id/email" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:text="Gallery"
    android:id="@+id/b3"
    android:layout_below="@+id/b5"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="password"
    android:id="@+id/textView5"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="#828206"
    android:layout_alignTop="@+id/password"
    android:layout_alignParentStart="true"
    android:layout_above="@+id/btnLogin"
    android:layout_alignEnd="@id/textView5" />


</RelativeLayout>

